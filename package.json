{
  "name": "alessa-ordering",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:seed": "node prisma/seed.js",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "clean": "rm -rf .next node_modules/.cache",
    "setup": "npm install && npm run db:generate",
    "dev:clean": "npm run clean && npm run dev",
    "build:clean": "npm run clean && npm run build",
    "test:types": "tsc --noEmit --skipLibCheck",
    "test:smoke": "node -e \"try{require('fs').rmSync('.smoke-tests',{recursive:true,force:true});}catch{}\" && tsc --project tsconfig.smoke.json && node .smoke-tests/tests/smoke/index.js",
    "verify": "npm run lint && npm run test:types && npm run test:smoke",
    "verify:full": "bash scripts/verify.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.4.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "next": "14.0.3",
    "next-auth": "^4.24.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^12.18.0",
    "tailwindcss": "^3.4.18",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@types/node": "^20.9.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.54.0",
    "eslint-config-next": "14.0.3",
    "postcss": "^8.5.6",
    "prisma": "^5.22.0",
    "typescript": "^5.2.2"
  }
}
