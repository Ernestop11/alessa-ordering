# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema

# PostgreSQL connection string
DATABASE_URL="postgresql://alessa:StrongPassword123@localhost:5432/alessa_db"

# NextAuth configuration
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-secret-key-here" # Generate this with: openssl rand -base64 32
NEXTAUTH_COOKIE_NAME="session_ordering" # Custom cookie name for ordering app isolation

# Admin credentials
ADMIN_EMAIL="admin@alessa.com"
ADMIN_PASSWORD="admin123"
# Super admin (for provisioning SaaS tenants)
SUPER_ADMIN_EMAIL="super@alessa.com"
SUPER_ADMIN_PASSWORD="superadmin123"

# Customer login debugging (set to "true" in local dev to expose tokens in API responses)
CUSTOMER_LOGIN_DEBUG_TOKEN="true"

# Google OAuth (optional - for social login)
# GOOGLE_ID="your-google-client-id"
# GOOGLE_SECRET="your-google-client-secret"

# Multi-tenant configuration
ROOT_DOMAIN="alessacloud.com"
DEFAULT_TENANT_SLUG="lasreinas"

# Next.js host binding (for EPERM fix on macOS)
NEXTHOST="127.0.0.1"

# Apple Pay configuration (per tenant values stored in database)
# APPLE_PAY_MERCHANT_ID="merchant.com.example"

# Stripe platform keys
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email notifications (for order alerts)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Stripe webhook handler requires raw body; define STRIPE_WEBHOOK_SECRET above.

# Clover POS (optional)
CLOVER_API_KEY="clover-api-key"
CLOVER_MERCHANT_ID="merchant-id"

# Tax provider integrations (optional)
# TAXJAR_API_KEY="taxjar_live_..."

# Bluetooth printer bridge (optional)
# BLUETOOTH_PRINTER_ENDPOINT="https://printer-bridge.local/print"
# BLUETOOTH_PRINTER_API_KEY="shared-secret-token"
# PRINTER_SERVICE_API_KEY="shared-secret-token"

# Customer login notifications
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
RESEND_FROM_EMAIL="login@alessacloud.com"
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_FROM_NUMBER="+15555555555"

# DoorDash Drive API (platform credentials)
DOORDASH_DEVELOPER_ID="your-developer-id"
DOORDASH_KEY_ID="your-key-id"
DOORDASH_SIGNING_SECRET="your-signing-secret"
DOORDASH_SANDBOX="true"  # Set to "false" for production

# Uber Direct API (alternative delivery partner)
# Apply for partnership: https://developer.uber.com/docs/direct
UBER_CLIENT_ID="your-uber-client-id"
UBER_CLIENT_SECRET="your-uber-client-secret"
UBER_SANDBOX="true"  # Set to "false" for production

# Alessa Cloud Ecosystem API
# Generate with: openssl rand -base64 32
ALESSACLOUD_API_KEY="your-secure-api-key-here"
ALESSACLOUD_BASE_URL="https://alessacloud.com/api"
